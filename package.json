{
  "name": "myallet-api",
  "version": "1.0.0",
  "description": "This a project for the API of a Financial Manager App - MyWallet.",
  "main": "./scr/app.js",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint .",
    "lint:staged": "lint-staged",
    "prebuild": "rm -rf dist",
    "generate": "prisma db push && prisma generate",
    "build": "npm run generate && tsc && tsc-alias",
    "start": "node dist/server.js",
    "dev:load-envs": "dotenv -e .env.development",
    "dev:db-push": "npm run dev:load-envs prisma db push",
    "dev:generate": "npm run dev:db-push && prisma generate",
    "dev:seed": "npm run dev:load-envs prisma db seed",
    "dev": "npm run dev:load-envs -- nodemon --watch './src' --exec ts-node ./src/server.ts --ext ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "http-status": "^1.7.3",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "uuid": "^9.0.1",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "prisma": "^5.7.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.3.3",
    "typescript-transform-paths": "^3.4.6"
  }
}
